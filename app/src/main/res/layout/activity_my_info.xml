<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPasswordChange"
            style="@style/CategoryStyle"
            android:text="Password Change"
            />

        <TextView
            android:id="@+id/tvPersonalInformation"
            style="@style/CategoryStyle"
            android:text="Personal Information" />

        <TextView
            android:id="@+id/tvGmail"
            style="@style/CategoryStyle"
            android:text="@string/linktoSite"
            android:autoLink="all"
            />

        <TextView
            android:id="@+id/tvMyAccountBalance"
            style="@style/CategoryStyle"
            android:text="My Account Balance" />

        <TextView
            android:id="@+id/tvGrades"
            style="@style/CategoryStyle"
            android:text="Grades" />


    </LinearLayout>


    </ScrollView>


