    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAlerts"
            style="@style/CategoryStyle"
            android:text="Emergency and Weather Alerts"
            />

        <TextView
            android:id="@+id/tvPoliceDepartment"
            style="@style/CategoryStyle"
            android:text="Police Department" />

        <TextView
            android:id="@+id/tvCounselingCenter"
            style="@style/CategoryStyle"
            android:text="Counselling Center" />

        <TextView
            android:id="@+id/tvSexualAssaultPolicy"
            style="@style/CategoryStyle"
            android:text="Sexual Assault Policy" />



    </LinearLayout>

    </ScrollView>

